# Any changes will be overwritten.
{%- macro render_section_dict(section, items, indent = '    ', infix = ' ', postfix = '\t') %}
{%- if items is not iterable or items is string -%}
{{section}} "{{items}}"
  {%- else %}{% for item in items %}
    {%- for k,v in item.items() %}
{{section}}['{{k}}']={{v}}
    {%- endfor %}
  {%- endfor -%}
{%- endif -%}
{%- endmacro -%}

{# Get pillar config should have sections with key/value dicts #}
{%- for section, data in salt['pillar.get']('gitlab_omnibus:config', {} | dictsort).iteritems() %}
{{ render_section_dict(section,data) }}
{%- endfor %}

